/* pages/sold/sold.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  background-color: #9DBBA8;
  height: 100vh;
  width: 100%;
}
.picture,.title,.price{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:85%;
  height:80rpx;
  background-color:white;
  margin-top: 2%;
  margin-bottom: 2%;
  border:1rpx solid white;
  border-radius: 15rpx;
}
.picture text{
  color: #4A7053;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.picture image{
  height: 70%;
  width: 60rpx;
  margin-left: 40rpx;
}
.price text,.title text{
  margin-left: 20rpx;
  margin-right:70rpx;
}
.Selector{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.select{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  width: 100%;
}
.select text{
  font-size: smaller;
  margin-top: 10rpx;
  margin-right: 20rpx;
  text-align: center;
}
.select picker{
  background-color: #ffffff;
  text-align: center;
  padding: 10rpx;
  border-radius: 15rpx;
  width: 20%;
}
.Summary{
  background-color: white;
  width: 85%;
  border:1rpx solid white;
  border-radius: 15rpx;
}
button{
  margin-top:40rpx; 
  width: 60%;
  background-color:#4A7053;
  color: white;
}