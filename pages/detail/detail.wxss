/* pages/detail/detail.wxss */
.container{
  height: 100%;
  width: 100%
}
.swiper{
height: 750rpx;
width: 750rpx;
box-sizing: border-box;
}
.swiper .slide-image{
width: 750rpx;
height: 750rpx;
}
.goods{
display: flex;
flex-direction: row;
flex-wrap: wrap;
width: 100%;
height: 215rpx;
margin-top: 5%;
margin-left: 5%;
}
.left{
  width: 80%;
}
.right{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin-right: 3%;
  width: 12%;
}
.right image{
  width: 50rpx;
  height: 50rpx;
}
.Price{
  color: red;
  font-size: 120%;
}
.user{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
}
.user image{
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid white;
  border-radius: 50%;
}
.Userid{
  margin-left:20rpx;
}
.Userlocation{
  margin-left:20rpx;
  background-color: #9DBBA8;
  color: white;
  border: 1rpx solid #9DBBA8;
  border-radius: 10%;
}
.line{
  margin-top:10rpx; 
  width: 100%;
  height: 40rpx;
  background-color: whitesmoke
}
.comment{
  margin-left:5%;
}
.commenthead{
  width: 100%;
  font-size: smaller;
  border-bottom: 1rpx solid #9DBBA8;
  height: 40rpx;
  padding: 10rpx;
}
.content1{
  border: 1px solid #9DBBA8
}
.Summary{
  font-size: small
}